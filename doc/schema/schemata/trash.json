  "title": "trash endpoint",
  "description": "This is the trash resource. You can store trash here.",
  "type": "object",
  "id": "trash",
  "definitions": {
    "filename": {
      "type": "string",
      "description": "The name of the file being trashed.",
      "example": "pictures_of_myself.zip"
    },
    "data": {
      "type": "string",
      "description": "The data you want to trash in our distributed trash cloud.",
      "example": "!!! LARGE BINARY DATA !!!"
    },
    "message": {
      "description": "A message",
      "example": "kthxbai",
      "type": "integer"
    }
  },
